
<h4><%= @post.title %></h4>
<div><%= @post.body %></div><br>
<%= link_to 'Back', root_path %>
<% if @post.user == current_user %>
	 <td><%= link_to 'Edit', edit_post_path(@post) %></td>
	 <td><%= link_to 'Delete', delete_post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %></td>
<% end %>
