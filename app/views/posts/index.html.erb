<!-- wrap around page-->
	
	<div class="jumbotron">
		<table>
		  <thead>
		    <tr>
		      
		      <th></th>
		      <th></th>
		      <th></th>
			  <th></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @posts.each do |post| %>
		      <tr>
			        
			        <td><%= link_to (image_tag post.image.url(:thumb))%></td>
			        
		        <% if post.user == current_user %>
			        <td><%= link_to 'Edit', edit_post_path(post) %></td>
			        <td><%= link_to 'Delete', delete_post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></td>
		        <% end %>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>



