<div class="panel-body">


		<%= form_for @post do |f| %><br>
	<div class="form-group">
		<%= f.label :title %><br>
		<%= f.text_field :title, class: "form-control"%><br>
	</div>
	<div class="form-group">
		<%= f.label :body %><br>
		<%= f.text_area :body, class: "form-control" %><br>
	</div>
	
	<div class="form-group">
          <%= f.submit "Update", class: "btn btn-warning" %>
    </div>
	
		<% end %>
  </div>